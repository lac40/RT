@model RepTrackWeb.Models.Exercise.ExerciseDetailViewModel

@{
    ViewData["Title"] = "Exercise Details";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@Model.Name</h1>
        <div>
            @if (!Model.IsSystemExercise)
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            }
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Exercise Information</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Primary Muscle Group:</dt>
                        <dd class="col-sm-8">@Model.PrimaryMuscleGroupName</dd>

                        <dt class="col-sm-4">Secondary Muscle Groups:</dt>
                        <dd class="col-sm-8">
                            @if (Model.SecondaryMuscleGroupNames != null && Model.SecondaryMuscleGroupNames.Any())
                            {
                                <span>@string.Join(", ", Model.SecondaryMuscleGroupNames)</span>
                            }
                            else
                            {
                                <span>None</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Equipment:</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.EquipmentRequired))
                            {
                                @Model.EquipmentRequired
                            }
                            else
                            {
                                <span>None required</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Type:</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsSystemExercise)
                            {
                                <span class="badge bg-primary">System Exercise</span>
                            }
                            else
                            {
                                <span class="badge bg-info">Custom Exercise</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <div class="mt-3">
                    <h5>Description:</h5>
                    <p>@Model.Description</p>
                </div>
            }
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Performance History</h5>
        </div>
        <div class="card-body">
            <p class="text-muted">Performance history will be displayed here in a future update.</p>
            <!-- Future enhancement: Show history of this exercise's performance across workouts -->
        </div>
    </div>
</div>