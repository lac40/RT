@model RepTrackWeb.Models.Goal.GoalDetailViewModel

@{
    ViewData["Title"] = "Delete Goal";
}

<div class="container">
    <h1 class="text-danger">Delete Goal</h1>

    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this goal?</h4>
        <p>This action cannot be undone.</p>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">@Model.Title</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Goal Type:</dt>
                <dd class="col-sm-9">@Model.Type</dd>

                <dt class="col-sm-3">Target:</dt>
                <dd class="col-sm-9">@Model.TargetDisplay</dd>

                <dt class="col-sm-3">Progress:</dt>
                <dd class="col-sm-9">@Model.CompletionPercentage.ToString("F0")%</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Delete Goal</button>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
    </form>
</div>