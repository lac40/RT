@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="alert alert-danger">
                <h1 class="text-danger mb-3">
                    <i class="fas fa-exclamation-triangle"></i> Error
                </h1>
                
                @if (Model.HasMessage)
                {
                    <h2 class="h4 mb-3">@Model.Message</h2>
                }
                else
                {
                    <h2 class="h4 mb-3">An error occurred while processing your request.</h2>
                }

                @if (Model.ShowDetails)
                {
                    <div class="mt-4 p-3 bg-light border-start border-warning border-3">
                        <h3 class="h5 text-warning">
                            <i class="fas fa-wrench"></i> Development Mode
                        </h3>
                        <p class="mb-2">
                            You are seeing detailed error information because the application is running in 
                            <strong>Development</strong> environment.
                        </p>
                        
                        @if (Model.ShowRequestId)
                        {
                            <p class="mb-2">
                                <strong>Request ID:</strong> <code>@Model.RequestId</code>
                            </p>
                        }
                        
                        <p class="mb-0 small text-muted">
                            <strong>Note:</strong> The Development environment shouldn't be enabled for deployed applications 
                            as it can result in displaying sensitive information to end users.
                        </p>
                    </div>
                }
                else
                {
                    <div class="mt-4">
                        <p class="mb-3">
                            We apologize for the inconvenience. Please try again later. 
                            If the problem persists, please contact the site administrator.
                        </p>
                        
                        @if (Model.ShowRequestId)
                        {
                            <p class="small text-muted">
                                <strong>Reference ID:</strong> <code>@Model.RequestId</code>
                            </p>
                        }
                    </div>
                }

                <div class="mt-4 d-flex gap-2">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                        <i class="fas fa-home"></i> Return to Home
                    </a>
                    <a href="javascript:history.back()" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Go Back
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
